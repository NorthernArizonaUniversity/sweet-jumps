var fs = require('fs')
  , path = require('path')
  , program = require('commander')
  , common = require('../lib/sweet-jumps/common')
  , log = console.log
  , version = '0.11.0'
  , commands = {}
  , paths = {
      base: path.resolve(__dirname, '..'),
      lib:  path.resolve(__dirname, '..', 'lib'),
      init: path.resolve(__dirname, '..', 'init'),
      cwd:  process.cwd()
    }

    common.dump(paths)

/**
 * Handles commands to generate new projects or components
 * @param  {[type]} cmd     [description]
 * @param  {[type]} options [description]
 * @return {[type]}         [description]
 */

commands.create = function (cmd, options) {


    common.dump(cmd)
    common.dump(options)


}


/**
 * Create and run the CLI component
 */

program
  .version(version)

program
  .command('create <type>')
  .description('generate a new project or component')
  .option('-n, --name <name>', 'name of the project or component')
  .action(commands.create)
  .on('--help', function () {
    console.log('Creates a new project skeleton at your current working directory with the specified name, or adds a new component to the project at the current working directory.')
  })



program.parse(process.argv)

if (!program.args.length) program.help()