var sj = require('../lib/sj-cli')
  , common = require('../lib/sweet-jumps/common')
  , package = require('../package.json')
  , ln = '\n'
  , argv = require('yargs')
    .alias('v', 'verbose')
    .argv

sj.scriptname = argv.$0

/**
 * Main function that processes options and calls tasks
 * @param  {[type]} argv  [description]
 * @return {[type]}       [description]
 */
;(function main() {
  sj.print(('Sweet Jumps (' + package.version + ')' + ln).bold.grey)

  var args = argv._.slice()
    , taskname = args.shift()
    , params = args.slice()
    , task = sj.getTask(taskname) || sj.getTask('help')

  // common.dump(argv)

  task(taskname, params, argv)
})()
